<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    >

    <TextView
        android:id="@+id/nameProductoMiCarrito"
        android:layout_width="272dp"
        android:layout_height="37dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgProductoMiCarrito"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgProductoMiCarrito"
        android:layout_width="78dp"
        android:layout_height="77dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/checkBoxProducto"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/priceProductoMiCarrito"
        android:layout_width="65dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="#E91E63"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/imgProductoMiCarrito"
        app:layout_constraintTop_toBottomOf="@+id/nameProductoMiCarrito" />

    <CheckBox
        android:id="@+id/checkBoxProducto"
        android:layout_width="32dp"
        android:layout_height="42dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ratingProductoMiCarrito"
        android:layout_width="69dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:text="TextView"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/nameProductoMiCarrito" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="29dp"
        android:layout_height="31dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toEndOf="@+id/priceProductoMiCarrito"
        app:layout_constraintTop_toBottomOf="@+id/nameProductoMiCarrito"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/btnBasura"
        android:layout_width="37dp"
        android:layout_height="36dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/ratingProductoMiCarrito"
        app:layout_constraintTop_toBottomOf="@+id/nameProductoMiCarrito"
        app:srcCompat="@drawable/basura" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="410dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBasura" />

</androidx.constraintlayout.widget.ConstraintLayout>