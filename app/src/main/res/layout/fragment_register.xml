<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/descargar"
    android:layout_height="match_parent"
    tools:context=".fragments.RegisterFragment">


    <Button
        android:id="@+id/btnGoBack"
        android:layout_width="71dp"
        android:layout_height="61dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_back_foreground"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="47dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="128dp"
        android:gravity="center"
        android:text="Crear una cuenta"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textEmailNew"
        android:layout_width="315dp"
        android:layout_height="43dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="48dp"
        android:background="#DAD6D6"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:paddingLeft="10dp"
        app:circularflow_radiusInDP="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/textPasswordConfirmation"
        android:layout_width="315dp"
        android:layout_height="43dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:background="#DAD6D6"
        android:ems="10"
        android:hint="Repita la contraseña"

        android:inputType="textPassword"
        android:paddingLeft="10dp"
        app:circularflow_radiusInDP="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordNew" />

    <Button
        android:id="@+id/btnRegistrarseNewUser"
        android:layout_width="315dp"
        android:layout_height="43dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"

        android:background="@drawable/redondeado"
        android:text="REGISTRARSE"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordConfirmation" />

    <EditText
        android:id="@+id/textPasswordNew"
        android:layout_width="315dp"
        android:layout_height="43dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:background="#DAD6D6"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        app:circularflow_radiusInDP="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEmailNew" />

</androidx.constraintlayout.widget.ConstraintLayout>